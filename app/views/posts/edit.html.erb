<!DOCTYPE html>
<html>
  <head>
    <title>Karmik</title>
  </head>
  <body>
    <%= form_for(@post) do |f| %>
    <div class="modal">
    <div class="modalBox">
        <div class="boxHead">
          <%= image_tag 'karmic-logo.svg', class: 'logo' %>
        </div>
        <div class="boxBody">
          <label><%= f.label :title %></label>
          <%= f.text_field :title %>
          <label><%= f.label :description %></label>
          <%= f.text_field :description %>
          <label><%= f.label :give %></label>
           <%= f.select :give, options_for_select([['Give', true], ['Take', false]]) %>
          <%= f.submit "Edit Post", class: "addButton" %>
        </div>
    </div>
    </div>
  <% end %>
  </body>
</html>
