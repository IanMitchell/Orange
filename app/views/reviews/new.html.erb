<!DOCTYPE html>
<html>
  <head>
    <title>Karmik</title>
  </head>
  <body>
    <%= form_for([@post, @review]) do |f| %>
    <div class="modal">
    <div class="modalBox">
        <div class="boxHead">
          <%= image_tag 'karmic-logo.svg', class: 'logo' %>
        </div>
        <div class="boxBody">
          <label><%= f.label :title %></label>
          <%= f.text_field :title %>
          <label><%= f.label :feedback %></label>
          <%= f.text_field :feedback %>
          <label><%= f.label :score %></label>
           <%= f.select :score, options_for_select([['Very Bad', 1], ['Bad', 2], ['Okay', 3], ['Good', 4], ['Very Good', 5]]) %>
          <%= f.submit "Add Review", class: "addButton" %>
        </div>
    </div>
    </div>
  <% end %>
  </body>
</html>
